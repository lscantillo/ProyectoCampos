<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camposly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.uninorte.proyectomitad.campos">


    <TextView
        android:id="@+id/tvcampo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Asignatura"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:id="@+id/numero"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:layout_marginLeft="132dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp" />


    <EditText
        android:id="@+id/ettexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginTop="16dp"
        android:hint="Nombre asignatura"
        android:textSize="20sp"
        android:textColorHint="#FFF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.076" />
    <TextView
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:text="Estudiantes"
        android:textSize="25sp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:layout_marginLeft="132dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:hint="Nombres"
        android:id="@+id/etnombre"
        android:textColorHint="#FFF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="118dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.082" />
    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:hint="Apellidos"
        android:id="@+id/etapellidos"
        android:textColorHint="#FFF"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="118dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginRight="102dp"
        android:layout_marginTop="177dp"
        android:background="@color/colorAccent"
        android:drawableLeft="@mipmap/ic_add"
        android:onClick="onclickbotonlog"
        android:text="Agregar"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
